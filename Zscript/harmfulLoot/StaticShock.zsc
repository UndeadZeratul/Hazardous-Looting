class HDStaticShock : HDHarmfulBox {
	default {
		HDHarmfulBox.damagemin 0;
		HDHarmfulBox.damagemax 0;
		HDHarmfulBox.givetargetbody false;
		HDHarmfulBox.visualaid "HLArcSpark";
